{
  "name": "skyfi-mcp-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "SkyFi MCP - Satellite imagery integration for AI assistants and web",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter \"@skyfi-mcp/*\" dev",
    "dev:mcp": "pnpm --filter @skyfi-mcp/server dev",
    "dev:frontend": "pnpm --filter @skyfi-mcp/frontend dev",
    "dev:backend": "pnpm --filter @skyfi-mcp/backend dev",
    "build": "pnpm --recursive --filter \"@skyfi-mcp/*\" build",
    "build:mcp": "pnpm --filter @skyfi-mcp/server build",
    "build:frontend": "pnpm --filter @skyfi-mcp/frontend build",
    "build:backend": "pnpm --filter @skyfi-mcp/backend build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "rm -rf **/node_modules **/dist **/.turbo",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "skyfi",
    "satellite",
    "geospatial",
    "imagery",
    "ai",
    "claude",
    "monorepo"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "husky": "^9.1.7",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}
